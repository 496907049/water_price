<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_white"
     android:fitsSystemWindows="true"
    android:orientation="vertical" >
    <include 
        layout="@layout/base_top_bar"
        />
    <ImageView 
        style="@style/divider_hor_style"
        android:layout_marginTop="@dimen/base_margin_mid"
        />
    <LinearLayout 
        style="@style/base_item_nopadding_style"
        android:background="@color/white"
        >
        <EditText 
            android:id="@+id/name"
            style="@style/base_item_edit_style"
            />
        <ImageView 
            android:id="@+id/btn_clear"
            style="@style/base_icon_large"
            android:src="@drawable/base_icon_clear"
            />
        <TextView 
            android:id="@+id/string_tag"
            style="@style/base_text_content"
            android:layout_marginLeft="@dimen/base_margin_mid"
            />
        
    </LinearLayout>
    

</LinearLayout>
