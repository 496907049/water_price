<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_layout_m_w_v"
    android:paddingBottom="@dimen/base_padding_xsmall"
    android:paddingTop="@dimen/base_padding_xsmall"
 >


    <LinearLayout
        style="@style/base_layout_m_w_h_cv"
        android:paddingBottom="@dimen/base_padding_xsmall"
        android:paddingTop="@dimen/base_padding_xsmall">

        <TextView
            android:id="@+id/tv_key"
           style="@style/base_text_content.grey"
            android:text="@string/temperature"
            android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_value"
                style="@style/base_text_content.grey"
                android:text="-12.1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_line"
        style="@style/divider_hor_style" />



</LinearLayout>
