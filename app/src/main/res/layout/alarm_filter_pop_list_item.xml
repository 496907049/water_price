<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout style="@style/base_item_style"
        >

        <TextView
            android:id="@+id/text_name"
            style="@style/base_text_content.match"
            android:textSize="@dimen/base_textsize_small_ex"
            android:layout_weight="1.0"
            android:gravity="left"
            android:textColor="@color/base_text_black"
            android:layout_marginLeft="@dimen/base_margin_small"
            android:maxLines="1" />

    </LinearLayout>

    <ImageView style="@style/divider_hor_style.color"
        android:layout_marginLeft="@dimen/base_textsize_mid_ex"
        android:layout_marginRight="@dimen/base_textsize_mid_ex"
        />
</LinearLayout>
