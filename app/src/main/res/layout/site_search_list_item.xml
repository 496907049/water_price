<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/site_btn_default"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/base_margin_small"
    >


    <TextView
        android:id="@+id/tv_name"
        style="@style/base_text_content"
        android:text="XXX设备"
        android:gravity="left"
        android:layout_marginLeft="@dimen/base_margin_xsmall"
        android:layout_weight="1"/>


    <ImageView
        android:id="@+id/img_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/list_btn_tick"
        android:layout_marginRight="@dimen/base_margin_large"
        android:visibility="gone"/>


</LinearLayout>
