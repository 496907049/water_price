<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/base_text_light_blue"/>
            <corners android:topRightRadius="@dimen/base_default_radius"
                android:bottomRightRadius="@dimen/base_default_radius"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/base_text_light_blue"/>
            <corners android:topRightRadius="@dimen/base_default_radius"
                android:bottomRightRadius="@dimen/base_default_radius"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/transparent"/>
            <stroke android:width="1dp" android:color="@color/base_text_light_blue"/>
            <corners android:topRightRadius="@dimen/base_default_radius"
                android:bottomRightRadius="@dimen/base_default_radius"
                />
        </shape>
    </item>
</selector>